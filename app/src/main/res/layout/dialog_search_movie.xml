<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.SearchView
        android:id="@+id/sv_search_movieItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:queryHint="@string/empty_text_item_hint"
        android:imeOptions="actionSearch"
        android:inputType="text|textAutoComplete|textAutoCorrect|textCapWords"
        app:defaultQueryHint="@string/empty_text_item_hint"
        app:iconifiedByDefault="false">
        <requestFocus/>
    </android.support.v7.widget.SearchView>

    <ListView
        android:id="@+id/lv_search_movieItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/sv_search_movieItem"/>
</RelativeLayout>
